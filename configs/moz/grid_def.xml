
<grid_definition>
  
	<grid id="scalar_grid">
		<scalar scalar_ref="scalar"/>
	</grid>
	<grid id="rho_2D">
		<domain domain_ref="rho"/>
	</grid>
	<grid id="rho_3D">
		<domain domain_ref="rho"/>
		<axis axis_ref="s_rho"/>
	</grid>
	<grid id="u_2D">
		<domain domain_ref="u"/>
	</grid>
	<grid id="u_3D">
		<domain domain_ref="u"/>
		<axis axis_ref="s_rho"/>
	</grid>
	<grid id="v_2D">
		<domain domain_ref="v"/>
	</grid>
	<grid id="v_3D">
		<domain domain_ref="v"/>
		<axis axis_ref="s_rho"/>
	</grid>
	<grid id="w_2D">
		<domain domain_ref="w"/>
	</grid>
	<grid id="w_3D">
		<domain domain_ref="w"/>
		<axis axis_ref="s_w"/>
	</grid>
	<grid id="b_2D">
		<domain domain_ref="b"/>
	</grid>
	<grid id="b_3D">
		<domain domain_ref="b"/>
		<axis axis_ref="s_b"/>
	</grid>
  <grid id="psi_2D">
    <domain domain_ref="psi"/>
  </grid>
	<grid id="rho_vertical_dimension">
		<axis axis_ref="s_rho"/>
	</grid>
	<grid id="w_vertical_dimension">
		<axis axis_ref="s_w"/>
	</grid>

        <!-- Start MOZ -->
	<grid id="sshgrid_zoom">
		<domain domain_ref="rho_zoom"/>
	</grid>
	<grid id="rhogrid_zoom">
		<domain domain_ref="rho_zoom"/>
		<axis axis_ref="s_rho"/>
	</grid>
	<grid id="ugrid_zoom">
		<domain domain_ref="u_zoom"/>
		<axis axis_ref="s_rho"/>
	</grid>
	<grid id="vgrid_zoom">
		<domain domain_ref="v_zoom"/>
		<axis axis_ref="s_rho"/>
	</grid>
	<grid id="wgrid_zoom">
		<domain domain_ref="w_zoom"/>
		<axis axis_ref="s_w"/>
	</grid>

	<grid id="rhogrid_surf">
		<domain domain_ref="rho"/>
		<axis axis_ref="s_rho_surf"/>
	</grid>
	<grid id="ugrid_surf">
		<domain domain_ref="u"/>
		<axis axis_ref="s_rho_surf"/>
	</grid>
	<grid id="vgrid_surf">
		<domain domain_ref="v"/>
		<axis axis_ref="s_rho_surf"/>
	</grid>
	<grid id="wgrid_surf">
		<domain domain_ref="w"/>
		<axis axis_ref="s_w_surf"/>
	</grid>
</grid_definition>
